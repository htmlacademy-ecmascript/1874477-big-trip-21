{
	"compilerOptions": {
		"outDir": "./dist/",
		"noImplicitAny": true,
		"module": "ES2022",
		"target": "ES2022",
		"jsx": "react",
		"allowJs": true,
		"moduleResolution": "node",
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"lib": ["ESNext", "ES2023.Array", "DOM", "DOM.Iterable"],
		"strict": true,
		"paths": {
			"@view": ["./src/view"],
			"@view/*": ["./src/view/*"],
			"@presenter/*": ["./src/presenter/*"],
		}
	}
}
